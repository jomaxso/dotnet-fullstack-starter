@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex flex-column align-center justify-center mt-12">
    <MudIcon Icon="@Icons.Material.Filled.Lock" Color="Color.Error" Size="Size.Large" />
    <MudText Typo="Typo.h3" Class="mt-4" Color="Color.Error">403 – Access Denied</MudText>
    <MudText Typo="Typo.body1" Class="mt-2 text-center">
        You are signed in, but you don’t have permission to access this page.
    </MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-6" OnClick="@GoHome">
        Back to Home
    </MudButton>
</MudContainer>

@code {
    
    void GoHome() => NavigationManager.NavigateTo("/");
    
}